<!DOCTYPE html>
<html lang="en">
<head>
    <title>Player</title>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #1a1a1a;
            margin: 0;
            padding: 0;
            color: #d8f0f3;
            background-size: cover;
        }

        h1 {
            text-align: center;
            color: #2196f3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #333;
            padding: 12px;
            text-align: left;
            white-space: pre-wrap;
            font-size: 22px;
        }

        th {
            background-color: #444;
        }

        img {
            max-width: 700px;
            max-height: auto;
            height: auto;
            display: block;
            margin: 0 auto;
            border-radius: 5px;
            cursor: pointer; 
        }

        .actions {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin-top: 20px;
        }

        .link-center {
            text-align: center;
            margin-top: 20px;
        }

        .link-center a {
            display: inline-block;
            margin: 0 10px;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            background-color: #2196f3;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .link-center a:hover {
            background-color: #1769aa;
        }

        /* Lightbox styling */
        .lightbox {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            justify-content: center;
            align-items: center;
        }

        .lightbox img {
            max-width: 80%;
            max-height: 80%;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <h1>View Player</h1>
    <table class="Player-table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Data</th>
            <th>Pic</th>
        </tr>
        <tr>
            <td><%= Player.ID %></td>
            <td><%= Player.Name %></td>
            <td><%= Player.Data %></td>
            <td>
                <img onclick="openLightbox(this)" src="<%= Player.Pic %>" alt="Player Pic">
                <!-- Lightbox -->
                <div id="lightbox" class="lightbox" onclick="closeLightbox()">
                    <img id="lightbox-img" src="<%= Player.Pic %>" alt="Player Pic">
                </div>
            </td>  
        </tr>
    </table>
    <div class="link-center">
        <a href="/updatePlayer/<%= Player.ID %>">Edit</a>
        <a href="/updatePlayer/<%= Player.ID %>">Delete</a>
        <a href="/Players">Back to List</a>
    </div>

    <script>
        function openLightbox(element) {
            var lightbox = document.getElementById('lightbox');
            var lightboxImg = document.getElementById('lightbox-img');

            lightbox.style.display = 'flex';
            lightboxImg.src = element.src;

            window.addEventListener('wheel', zoomImage);
        }

        function closeLightbox() {
            document.getElementById('lightbox').style.display = 'none';
            window.removeEventListener('wheel', zoomImage);
        }

        function zoomImage(event) {
            var lightboxImg = document.getElementById('lightbox-img');
            var delta = event.deltaY || event.detail || event.wheelDelta;

            var scale = delta > 0 ? 1.1 : 0.9;
            lightboxImg.style.width = lightboxImg.clientWidth * scale + 'px';
            lightboxImg.style.height = lightboxImg.clientHeight * scale + 'px';

            event.preventDefault();
        }
    </script>
</body>
</html>
